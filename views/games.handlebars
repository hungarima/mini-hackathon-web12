
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">{{player1.name}}</th>
      <th scope="col">{{player2.name}}</th>
      <th scope="col">{{player3.name}}</th>
       <th scope="col">{{player4.name}}</th>
