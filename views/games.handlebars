<div class="text-center">
  <button type="button" class="btn btn-danger" id="addRound">ADD ROUND</button>
</div>


<script>
  let i = 0;
  $("#addRound").click(function(){
    i++;
    $(`<tr>
      <th scope="row">Round ${i}</th>
      <td><input type="text"></td>
      <td><input type="text"></td>
      <td><input type="text"></td>
      <td><input type="text"></td>
    </tr>`)
                    .appendTo("tbody");
});
</script>
