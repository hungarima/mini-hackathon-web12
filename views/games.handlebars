
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">{{player1.name}}</th>
      <th scope="col">{{player2.name}}</th>
      <th scope="col">{{player3.name}}</th>
       <th scope="col">{{player4.name}}</th>
    </tr>
    <tr class="bg-danger">
      <th scope="row">Sum Of Score</th>
      <td id="sum-1" class="sum-row"></td>
      <td id="sum-2" class="sum-row"></td>
      <td id="sum-3" class="sum-row"></td>
      <td id="sum-4" class="sum-row"></td>
    </tr>
  </thead>
  <tbody id="scoreBody">
  
    
  </tbody>
</table>
<div class="text-center">
  <button type="button" class="btn btn-danger" id="addRound">ADD ROUND</button>
</div>


<script>
  let i = 0;
$("#addRound").click(function(){
    i++;
    $(`<tr>
      <th scope="row">Round ${i}</th>
      <td><input type="number" class="form-control "></td>
      <td><input type="number" class="form-control "></td>
      <td><input type="number" class="form-control "></td>
      <td><input type="number" class="form-control "></td>

     
    </tr>`)
                    .appendTo("#scoreBody");
});

$("#scoreBody").on("keyup","td", function() {
  console.log($(this).val())
})


</script>
