

<form id="playerForm">
    <div class="form-group">
        <input type="text" class="form-control" id="player1" required placeholder="Player 1..">
    </div>

    <div class="form-group">
        <input type="text" class="form-control" id="player2" required placeholder="Player 2..">
    </div>

    <div class="form-group">
        <input type="text" class="form-control" id="player3" required placeholder="Player 3..">
    </div>

    <div class="form-group">
        <input type="text" class="form-control" id="player4" required placeholder="Player 4..">
    </div>

    <button type="submit" class="btn btn-danger">CREATE NEW GAME</button>
</form>


<script>
    console.log($);
    $("#playerForm").submit(function(e) {
        e.preventDefault();
        $.ajax({
            url: '/api/games',
            type: "POST",
            data: {
                player1 : $("#player1").val(),
                player2 : $("#player2").val(),
                player3 : $("#player3").val(),
                player4 : $("#player4").val()
            },
            success: function(res) {
                console.log("Success");
                window.location.href= `/games/${res.gameId}`;
            },
            error: function(res) {
                console.log("Error", res);
            }
        })
    })


</script>