<form id="create_game_form" class="text-center">
    <div class="form-group">
        <input type="text" placeholder="Player 1..." name="first_player" class="form-control border border-danger" required>
    </div>
    <div class="form-group">
        <input type="text" placeholder="Player 2..." name="second_player" class="form-control border border-danger" required>
    </div>
    <div class="form-group">
        <input type="text" placeholder="Player 3..." name="third_player" class="form-control border border-danger" required>
    </div>
    <div class="form-group">
        <input type="text" placeholder="Player 4..." name="fourth_player" class="form-control border border-danger" required>
    </div>
    <button type="submit" class="btn btn-danger">CREATE NEW GAME</button>
</form>

<script>
    $("#create_game_form").submit(function(e) {
        e.preventDefault();

        $.ajax({
            type: "POST",
            url: "/api/game",
            data: $("#create_game_form").serialize()
        }).then(res => {
            if(res.success && res.game) window.location.href = "/game/"+res.game;
        }).catch(err => {
            console.log(err)
        })
    })
</script>